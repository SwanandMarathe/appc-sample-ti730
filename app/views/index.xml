<Alloy>
  <NavigationWindow id="navWin" module="xp.ui">
    <Window id="container">
      <ListView onItemclick="handleItemClick">
        <ListSection>
          <ListItem title="Parallax" controller="parallax" platform="ios" />
          <ListItem title="iPhone X HomeIndicator" controller="iphonexhomeindicator" if="Alloy.Globals.isIphoneX" />
          <ListItem title="Run on iPhoneX for homeindicator example" if="!Alloy.Globals.isIphoneX" platform="ios" />
          <ListItem title="Background Location Indicator" controller="backgroundlocationindicator" platform="ios"  />
          <ListItem title="Notification Framework" controller="notificationframework" platform="ios" />
          <ListItem title="Masked Image" controller="maskedImage" platform="android" />
          <ListItem title="Webview Zoom" controller="webviewzoom"  />
          <ListItem title="Trigger an error" controller="error"  />
        </ListSection>
      </ListView>
    </Window>
  </NavigationWindow>
</Alloy>